post_install() {
  echo ''
  echo 'Before running soundcli you should create the directory'
  echo '  $XDG_CONFIG_HOME/soundcli/'
  echo 'or'
  echo '  $HOME/.config/soundcli/'
  echo 'to store the authentication token.'
  echo 'If you want to customize the configuration, copy the file'
  echo '  /etc/soundcli.conf'
  echo 'to the configuration directory you created.'
}

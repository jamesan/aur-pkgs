pkgname=rinse
pkgver=3.0.2
pkgrel=1
pkgdesc="A simple tool to install a new RPM-based distribution analogous to debootstrap."
arch=('any')
url="http://xen-tools.org/software/$pkgname"
license=('GPL')
groups=()
depends=('glibc' 'perl' 'perl-html-parser' 'perl-uri' 'perl-libwww' 'rpm2cpio' 'wget' 'rpm' 'cpio')
makedepends=('make')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/rinse/rinse.conf')
options=()
install=
source=("http://collab-maint.alioth.debian.org/$pkgname/download/${pkgname}_${pkgver}.tar.gz")
noextract=()
md5sums=('51c7875ae363ed35963e3b9fad344dd1')

package() {
  cd "$pkgname"
  make PREFIX="$pkgdir" install

  # Correct sbin location
  mv "$pkgdir"/usr/{s,}bin
}
